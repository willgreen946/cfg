! use a login shell
XTerm*loginShell:true

! cursor blink
XTerm*cursorBlink:true

! no scrollbar
XTerm*scrollBar:false

! xsel
XTerm*selectToClipboard:true

! fonts
XTerm*faceName:terminus:bold:pixelsize=24:antialias=true
xclock*faceName:terminus:bold:pixelsize=24:antialias=true
xconsole*faceName:terminus:bold:pixelsize=24:antialias=true

! colors
XTerm*background:#000000
XTerm*foreground:#AAAAAA
xclock*foreground:#000000
xclock*background:#AAAAAA
xconsole*foreground:#000000
xconsole*background:#AAAAAA
