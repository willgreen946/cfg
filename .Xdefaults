! My .Xdefault/.Xresources file

! Use a login shell with every terminal
XTerm*loginShell: False
UXTerm*loginShell: False
URxvt*loginShell: False

! Xsel
XTerm*selectToClipboard: True
UXTerm*selectToCliboard: True
URxvt*selectToCliboard: True

! Cursor blink
XTerm.VT100.blink: True
UXTerm.VT100.blink: True
URxvt.VT100.blink: True
XTerm*cursorBlink: True 
UXTerm*cursorBlink: True
URxvt*cursorBlink: True

! Fonts
XTerm*faceName: terminus:bold:pixelsize=24:antialias=true
UXTerm*faceName: spleen:pixelsize=24:antialias=true
XTerm*allowBoldFonts: True 
UXTerm*allowBoldFonts: True 
!XTerm*font:-misc-spleen-medium-r-normal--32-240-72-72-c-120-iso10646-1
!UXTerm*font:-misc-spleen-medium-r-normal--32-240-72-72-c-120-iso10646-1

! Turning off scrollbar
XTerm*scrollBar: off
UXTerm*scrollBar: off
URxvt*scrollBar: off

! Fix backspace issue with Tmux
XTerm*VT100.backarrowKey: False
UXTerm*VT100.backarrowKey: False
XTerm*ttyModes: erase ^?
UXTerm*ttyModes: erase ^?

! Enable visual bell
XTerm*visualBell: True
UXTerm*visualBell: True

!Starting up with a geometry
XTerm*VT100*geometry: 80x24
UXTerm*VT100*geometry: 80x24
URxvt*VT100*geometry: 80x24
!XTerm*VT100.initialFont: 64 
!UXTerm*VT100.initialFont: 64

! Dark Mode
XTerm*background: #000000
XTerm*foreground: #AAAAAA
UXTerm*background: #000000
UXTerm*foreground: #AAAAAA
URxvt*background: #000000
URxvt*foreground: #AAAAAA

! Normal colors - Bright colors

! Black
XTerm*color0: #000000
XTerm*color8: #F0F0F0
UXTerm*color0: #000000
