set -o vi
PS1="[`whoami`@`hostname`]$ "

# Verbose commands
alias ls="ls -A"
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -v"

alias get_tune="yt-dlp --extract-audio --audio-format wav $1"
alias search_youtube="sh ~/scripts/ytfzf/ytfzf"
alias cpu_temp="sysctl hw.sensors.cpu0.temp0"
alias search_linux="lynx https://linuxsheet.com"
alias search_internet="lynx https://duckduckgo.com"
alias vim="vis"

# Linux, change interface name, usually its wlan0
alias wifi_list="sudo iw wlp3s0 scan | grep SSID"

# OpenBSD
#alias wifi_list="iw wlp3s0 scan | grep SSID | less"

