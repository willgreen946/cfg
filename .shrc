root_cmd="doas"
wireless_interface="iwn0"

export EDITOR="vi"
export PAGER="less"

set -o vi
set -o posix

PS1="# "

# Swap Escape and Caps_Lock on the TTY
#wsconsctl keyboard.map+="keysym Caps_Lock = Escape"

# Verbose commands
alias ls="ls -lA"
alias cp="cp -v"
alias mv="mv -v"
alias rm="rm -v"

alias net_home="$root_cmd dhclient $wireless_interface && $root_cmd ifconfig $wireless_interface nwid \"BT-J5A85S\" wpakey \"c7G7dbLQK7APhE\""
alias net_get_tune="yt-dlp --extract-audio --audio-format wav $1"
alias net_search_youtube="sh ~/scripts/ytfzf/ytfzf"
alias net_search_linux="lynx https://linuxsheet.com"
alias net_search="lynx https://duckduckgo.com"

# Text editor
alias vim="elvis"

# Linux
#alias net_list="$root_cmd iw $wireless_interface scan | grep SSID"

# OpenBSD
alias net_list="$root_cmd ifconfig $wireless_interface scan | grep nwid | awk '{print \$2}'"
