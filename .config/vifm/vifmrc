" Single panel
" only

colorscheme matrix 

" Default editor
set vicmd=vim

" Plain text extensions
filextype *.txt vi %f

" Code extensions
filextype *.c vim %f
filextype *.S vim %f
filextype *.m vim %f
filextype *.h vim %f
filextype *.C vim %f
filextype *.pl vim %f
filextype *.ex vim %f
filextype *.sh vim %f
filextype *.cc vim %f
filextype *.cs vim %f
filextype *.hh vim %f
filextype *.rs vim %f
filextype *.c++ vim %f
filextype *.cxx vim %f
filextype *.cpp vim %f
filextype *.hpp vim %f
filextype *.vim vim %f
filextype *.lua vim %f
filextype *.asm vim %f

" Binary extensions
filextype *.o bvi %f
filextype *.so bvi %f
filextype *.exe bvi %f
filextype *.dll bvi %f

" Image extensions
filextype *.png nsxiv %f
filextype *.jpg nsxiv %f
filextype *.svg nsxiv %f
filextype *.jpeg nsxiv %f

" Document extensions
filextype *.pdf zathura %f
filextype *.doc libreoffice %f
filextype *.docx libreoffice %f
filextype *.pptx libreoffice %f
